<resources>
    <!-- Base application theme. -->
    <style name="Theme.SpeakWithAI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="colored_checkBox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlActivated">@color/purple</item>
    </style>
    <style name="App.Custom.Indicator" parent="@style/Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/transparent</item>
    </style>

    <style name="Theme.SpeakAndDraw" parent="@style/Base.Theme.SpeakAndDraw">
        <item name="android:statusBarColor">@color/white</item>
    </style>
    <style name="Base.Theme.SpeakAndDraw" parent="@style/Theme.Material3.DayNight.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_advanved_bottom_sheet</item>
    </style>

</resources>